<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/vwNameC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cause" />

        <EditText
            android:id="@+id/txtNameCause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="text"
            android:minWidth="200dp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/vwDescCause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descause" />

        <EditText
            android:id="@+id/txtDescCause"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:scrollbars="vertical" />

        <LinearLayout
            android:id="@+id/addfirm"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnaddfirm"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/btn_addfirm" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deletefirm"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btndelfirm"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/btn_deletefirm" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>